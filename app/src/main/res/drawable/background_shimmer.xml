<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_gray"/>
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>