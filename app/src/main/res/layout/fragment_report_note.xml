<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingStart="4dp"
            android:text="Observação!"
            android:textColorHint="@color/colorTextBlack"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_16dp"
            android:layout_marginTop="@dimen/layout_margin_8dp"
            android:layout_marginEnd="@dimen/layout_margin_16dp"
            android:layout_marginBottom="@dimen/layout_marginTop_16dp"
            android:hint="Texto..."
            android:textColorHint="@color/about_description_text_color"
            android:textSize="18sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>

