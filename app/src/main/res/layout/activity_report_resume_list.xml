<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/label_title_resume"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jo_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/padding_16"
            android:text="@string/label_description_resume"
            app:layout_constraintStart_toStartOf="@+id/jo_title"
            app:layout_constraintTop_toBottomOf="@+id/jo_title" />

        <TextView
            android:id="@+id/jo_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/padding_16"
            android:text="@string/label_observation"
            android:layout_marginTop="@dimen/margin_8"
            app:layout_constraintStart_toStartOf="@+id/jo_description"
            app:layout_constraintTop_toBottomOf="@+id/jo_description" />

        <TextView
            android:id="@+id/jo_conformity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/label_score_resume"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/jo_note"
            app:layout_constraintTop_toBottomOf="@+id/jo_note" />

        <TextView
            android:id="@+id/jo_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/padding_16"
            android:contentDescription="@string/image_result_photo"
            android:padding="@dimen/padding_2"
            android:background="@drawable/ic_action_image"
            app:layout_constraintBottom_toBottomOf="@+id/jo_conformity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/jo_conformity" />

</androidx.constraintlayout.widget.ConstraintLayout>